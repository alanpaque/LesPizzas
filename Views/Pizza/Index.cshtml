@model IEnumerable<LesPizzas.Models.Pizza>

@{
    ViewBag.Title = "La carte";
}

<h2>Liste des pizzas</h2>

<p>
    @Html.ActionLink("Créer une pizza", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            Type de pate
        </th>
        <th>
            Ingredients
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nom)
    </td>
    <td>
        @if (item.Pate != null) {
            @Html.DisplayFor(model => item.Pate.Nom)
        }
    </td>
    <td>
        @if (item.Ingredients != null) {
            foreach (var ingredient in item.Ingredients) {
                @Html.DisplayFor(m => ingredient.Nom)<br>
            }
        }
    </td>
    <td>
        @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Détails", "Details", new { id = item.Id }) |
        @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
