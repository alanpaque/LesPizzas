@model LesPizzas.Models.Pizza

<h4>Pizza</h4>
<hr />
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Nom)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Nom)
    </dd>
    <br />
    <dt>
        Type de pate
    </dt>
    <dd>
        @if (Model.Pate != null)
        {
            @Html.DisplayFor(model => Model.Pate.Nom)
        }
    </dd>

    <br />
    <dt>
        Ingredients
    </dt>

    <br />
    <dd>
        @if (Model.Ingredients != null)
        {
            foreach (var ingredient in Model.Ingredients)
            {
                @Html.DisplayFor(m => ingredient.Nom)<br>
            }
        }
    </dd>
</dl>